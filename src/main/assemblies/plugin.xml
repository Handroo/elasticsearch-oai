<?xml version="1.0"?>
<assembly>
    <id>plugin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>compile</scope>
            <includes>
                <include>org.xbib.elasticsearch.plugin:elasticsearch-river-oai</include>
                <include>org.xbib.elasticsearch.plugin:elasticsearch-support</include>
                <include>org.xbib:elasticsearch</include>
                <include>org.xbib:pipeline</include>
                <include>org.xbib:http</include>
                <include>org.xbib:compress</include>
                <include>org.xbib:util</include>
                <include>org.xbib:content</include>
                <include>org.xbib:elements</include>
                <include>org.xbib:iso2709</include>
                <include>org.xbib:rdf</include>
                <include>org.xbib:oai</include>
                <include>org.xbib:logging</include>
                <include>io.netty</include>
                <include>xerces:xercesImpl</include>
                <include>xalan:xalan</include>
                <include>xalan:serializer</include>
                <include>com.google.guava:guava</include>
                <include>com.fasterxml.jackson.core</include>
                <include>com.fasterxml.jackson.dataformat</include>
                <include>org.slf4j:slf4j-api</include>
                <include>org.slf4j:slf4j-log4j12</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/*.sh</include>
                <include>bin/**/*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/test/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>log4j.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
